<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>BookManageSystem</display-name>
  <welcome-file-list>
    <welcome-file>login.htm</welcome-file>
  </welcome-file-list>
  
  <listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:beans.xml</param-value>
	</context-param>
	<!-- 字符过滤器utf-8 -->
	<filter>
		<filter-name>Encoding</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- 登录拦截 -->
	<filter>
		<display-name>LoginFilter</display-name>
		<filter-name>LoginFilter</filter-name>
		<filter-class>com.filter.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/page/*</url-pattern>
		<url-pattern>/roles/*</url-pattern>
		<url-pattern>/menus/*</url-pattern>
		<url-pattern>/book/*</url-pattern>
		<url-pattern>/excelDownload/*</url-pattern>
		<url-pattern>/user/selectUsers</url-pattern>
	</filter-mapping>
	

	<!-- log4j -->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.xml</param-value>
	</context-param>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>BookManageSystem.root</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	
	
	<!--用户 -->
	<servlet>
		<description></description>
		<display-name>user</display-name>
		<servlet-name>user</servlet-name>
		<servlet-class>com.util.DelegatingServletProxy</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>user</servlet-name>
		<url-pattern>/user/*</url-pattern>
	</servlet-mapping>
	
	
	<!--导航菜单 -->
	<servlet>
		<description></description>
		<display-name>menus</display-name>
		<servlet-name>menus</servlet-name>
		<servlet-class>com.util.DelegatingServletProxy</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>menus</servlet-name>
		<url-pattern>/menus/*</url-pattern>
	</servlet-mapping>
	
	<!--角色管理 -->
	<servlet>
		<description></description>
		<display-name>roles</display-name>
		<servlet-name>roles</servlet-name>
		<servlet-class>com.util.DelegatingServletProxy</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>roles</servlet-name>
		<url-pattern>/roles/*</url-pattern>
	</servlet-mapping>
	
	
	<!-- 书籍管理 -->
	<servlet>
		<description></description>
		<display-name>book</display-name>
		<servlet-name>book</servlet-name>
		<servlet-class>com.util.DelegatingServletProxy</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>book</servlet-name>
		<url-pattern>/book/*</url-pattern>
	</servlet-mapping>
	
	<!-- 提供EXCEL生成和下载 -->
	<servlet>
		<description></description>
		<display-name>excelDownload</display-name>
		<servlet-name>excelDownload</servlet-name>
		<servlet-class>com.util.DelegatingServletProxy</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>excelDownload</servlet-name>
		<url-pattern>/excelDownload/*</url-pattern>
	</servlet-mapping>
	
	<!--  bookupload-->
	<servlet>
		<description></description>
		<display-name>bookupload</display-name>
		<servlet-name>bookupload</servlet-name>
		<servlet-class>com.util.DelegatingServletProxy</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>bookupload</servlet-name>
		<url-pattern>/bookupload/*</url-pattern>
	</servlet-mapping>
	
</web-app>