<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<!-- 用户 -->
		<typeAlias alias="user" type="com.user.dto.User" />
		<!-- menus -->
		<typeAlias alias="menus" type="com.menus.dto.Menus" />
		<!-- roles -->
		<typeAlias alias="roles" type="com.roles.dto.Roles" />
		<!-- book -->
		<typeAlias alias="book" type="com.book.dto.Book"/>
		<!-- bookContent -->
		<typeAlias alias="classify" type="com.book.dto.Classify"/>
		<!-- readNote -->
		<typeAlias alias="readNote" type="com.book.dto.ReadNote"/>
		<!-- borrowRecord -->
		<typeAlias alias="borrowRecord" type="com.book.dto.BorrowRecord"/>
		<!-- borrowRecord -->
		<typeAlias alias="outbook" type="com.book.dto.OutBook"/>
	</typeAliases>
	
	<mappers>
		<!-- 用户 -->
		<mapper resource="com/user/sqlmap/user.xml"/>
		<!-- menus -->
		<mapper resource="com/menus/sqlmap/menus.xml"/>
		<!-- roles -->
		<mapper resource="com/roles/sqlmap/roles.xml"/>
		<!-- book -->
		<mapper resource="com/book/sqlmap/book.xml"/>
	</mappers>
</configuration>	
